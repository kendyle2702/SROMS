<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentController</servlet-name>
        <servlet-class>Controllers.StudentController</servlet-class>
    </servlet>
   
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>Controllers.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>StudentController</servlet-name>
        <url-pattern>/student</url-pattern>
        <url-pattern>/student/profile/view</url-pattern>
        <url-pattern>/student/profile/edit</url-pattern>
        <url-pattern>/student/clubs/view</url-pattern>
        <url-pattern>/student/clubs/detail</url-pattern>
        <url-pattern>/student/clubs/register</url-pattern>
        <url-pattern>/student/clubs/myclub</url-pattern>
        <url-pattern>/student/events/view</url-pattern>
        <url-pattern>/student/events/detail</url-pattern>
        <url-pattern>/student/events/detail/*</url-pattern>
        <url-pattern>/student/events/register</url-pattern>
        <url-pattern>/student/news/view</url-pattern>
        <url-pattern>/student/news/detail</url-pattern>
    </servlet-mapping>
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
